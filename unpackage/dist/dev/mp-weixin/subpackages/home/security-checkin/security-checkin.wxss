.security-checkin-page {
  min-height: 100vh;
  background: linear-gradient(to right, #e0ecfa 0%, #f4f6f9 50%, #f6f4fc 100%);
}
.security-checkin-page .form-container {
  padding: 50rpx 30rpx 200rpx 30rpx;
}
.security-checkin-page .form-card {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  -webkit-backdrop-filter: blur(10px);
          backdrop-filter: blur(10px);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}
.security-checkin-page .form-card .card-title {
  display: flex;
  align-items: center;
  margin-bottom: 25rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid rgba(59, 85, 152, 0.1);
}
.security-checkin-page .form-card .card-title text {
  margin-left: 10rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}
.security-checkin-page .form-card .card-title .optional {
  margin-left: 10rpx;
  font-size: 24rpx;
  color: #999;
  font-weight: normal;
}
.security-checkin-page .form-card .form-item {
  margin-bottom: 25rpx;
}
.security-checkin-page .form-card .form-item .label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}
.security-checkin-page .form-card .form-item .input {
  width: auto;
  height: 80rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  border: 1rpx solid #e9ecef;
}
.security-checkin-page .form-card .form-item .input:focus {
  border-color: #3b5598;
  background: #fff;
}
.security-checkin-page .form-card .location-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  background: linear-gradient(135deg, #3b5598 0%, #5a7bcd 100%);
  border-radius: 15rpx;
  color: white;
  font-size: 28rpx;
  transition: all 0.3s ease;
}
.security-checkin-page .form-card .location-btn text {
  margin-left: 10rpx;
}
.security-checkin-page .form-card .location-btn:active {
  -webkit-transform: translateY(2rpx);
          transform: translateY(2rpx);
  opacity: 0.9;
}
.security-checkin-page .form-card .radio-group .radio-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}
.security-checkin-page .form-card .radio-group .radio-item:last-child {
  border-bottom: none;
}
.security-checkin-page .form-card .radio-group .radio-item .radio-icon {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 2rpx solid #ddd;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  transition: all 0.3s ease;
}
.security-checkin-page .form-card .radio-group .radio-item .radio-icon.active {
  border-color: #3b5598;
  background: #3b5598;
}
.security-checkin-page .form-card .radio-group .radio-item .radio-icon.active .radio-dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: white;
}
.security-checkin-page .form-card .radio-group .radio-item .radio-label {
  font-size: 28rpx;
  color: #333;
}
.security-checkin-page .form-card .image-upload .image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 15rpx;
}
.security-checkin-page .form-card .image-upload .image-list .image-item {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  border-radius: 15rpx;
  overflow: hidden;
}
.security-checkin-page .form-card .image-upload .image-list .image-item .uploaded-image {
  width: 100%;
  height: 100%;
}
.security-checkin-page .form-card .image-upload .image-list .image-item .delete-btn {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 40rpx;
  height: 40rpx;
  background: #f5222d;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 3rpx solid white;
}
.security-checkin-page .form-card .image-upload .image-list .upload-btn {
  width: 160rpx;
  height: 160rpx;
  border: 2rpx dashed #ddd;
  border-radius: 15rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #f8f9fa;
}
.security-checkin-page .form-card .image-upload .image-list .upload-btn .upload-text {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}
.security-checkin-page .form-card .image-upload .upload-tip {
  font-size: 24rpx;
  color: #999;
}
.security-checkin-page .form-card .textarea {
  width: auto;
  min-height: 200rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  border: 1rpx solid #e9ecef;
  resize: none;
}
.security-checkin-page .form-card .textarea:focus {
  border-color: #3b5598;
  background: #fff;
}
.security-checkin-page .form-card .char-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}
.security-checkin-page .submit-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx;
  background: rgba(255, 255, 255, 0.95);
  -webkit-backdrop-filter: blur(10px);
          backdrop-filter: blur(10px);
  border-top: 1rpx solid rgba(0, 0, 0, 0.05);
}
.security-checkin-page .submit-section .submit-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #3b5598 0%, #5a7bcd 100%);
  border-radius: 25rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
}
.security-checkin-page .submit-section .submit-btn:disabled {
  opacity: 0.6;
  -webkit-transform: none;
          transform: none;
}
.security-checkin-page .submit-section .submit-btn:active:not(:disabled) {
  -webkit-transform: translateY(2rpx);
          transform: translateY(2rpx);
}
.security-checkin-page .submit-section .submit-btn text {
  margin-left: 10rpx;
}
