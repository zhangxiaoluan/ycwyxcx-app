.article-detail-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #f4f6f9 0%, #ffffff 100%);
}
.article-detail-page .loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}
.article-detail-page .loading .loading-text {
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #999;
}
.article-detail-page .content .cover-section {
  width: 100%;
  height: 400rpx;
  overflow: hidden;
}
.article-detail-page .content .cover-section .cover-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.article-detail-page .content .article-header {
  padding: 40rpx 35rpx 30rpx;
  background: #ffffff;
  margin-bottom: 20rpx;
}
.article-detail-page .content .article-header .article-title {
  display: block;
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.4;
  margin-bottom: 30rpx;
}
.article-detail-page .content .article-header .article-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.article-detail-page .content .article-header .article-meta .author-info, .article-detail-page .content .article-header .article-meta .publish-time {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #666;
}
.article-detail-page .content .article-header .article-meta .author-info text, .article-detail-page .content .article-header .article-meta .publish-time text {
  margin-left: 8rpx;
}
.article-detail-page .content .article-header .article-stats .view-count {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}
.article-detail-page .content .article-header .article-stats .view-count text {
  margin-left: 8rpx;
}
.article-detail-page .content .summary-section {
  margin: 0 35rpx 30rpx;
}
.article-detail-page .content .summary-section .summary-card {
  background: linear-gradient(135deg, #e8f4fd 0%, #f0f9ff 100%);
  border-radius: 20rpx;
  padding: 30rpx;
  border-left: 6rpx solid #3b5598;
}
.article-detail-page .content .summary-section .summary-card .summary-text {
  font-size: 28rpx;
  color: #555;
  line-height: 1.6;
}
.article-detail-page .content .article-content {
  background: #ffffff;
  margin: 0 35rpx;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}
.article-detail-page .content .article-content .rich-content {
  font-size: 30rpx;
  color: #333;
  line-height: 1.8;
}
.article-detail-page .content .article-content .rich-content :deep(._strong) {
  font-weight: 600;
  color: #222;
}
.article-detail-page .content .article-content .rich-content :deep(._em) {
  font-style: italic;
  color: #555;
}
.article-detail-page .error {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}
.article-detail-page .error .error-text {
  margin: 30rpx 0;
  font-size: 28rpx;
  color: #999;
}
.article-detail-page .error .retry-btn {
  background: #3b5598;
  color: #ffffff;
  border: none;
  border-radius: 20rpx;
  padding: 0 40rpx;
  font-size: 28rpx;
}
