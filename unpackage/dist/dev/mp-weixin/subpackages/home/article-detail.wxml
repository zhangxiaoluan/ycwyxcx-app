<view class="article-detail-page"><block wx:if="{{loading}}"><view class="loading"><u-loading-icon vue-id="270071ce-1" size="40" color="#3b5598" bind:__l="__l"></u-loading-icon><text class="loading-text">加载中...</text></view></block><block wx:else><block wx:if="{{article}}"><view class="content"><block wx:if="{{article.coverImage}}"><view class="cover-section"><image class="cover-image" src="{{article.coverImage}}" mode="aspectFill"></image></view></block><view class="article-header"><text class="article-title">{{article.title}}</text><view class="article-meta"><view class="author-info"><u-icon vue-id="270071ce-2" name="account" size="16" color="#999" bind:__l="__l"></u-icon><text class="author">{{article.author}}</text></view><view class="publish-time"><u-icon vue-id="270071ce-3" name="clock" size="16" color="#999" bind:__l="__l"></u-icon><text>{{$root.m0}}</text></view></view><view class="article-stats"><view class="view-count"><u-icon vue-id="270071ce-4" name="eye" size="16" color="#999" bind:__l="__l"></u-icon><text>{{article.viewCount+" 阅读"}}</text></view></view></view><block wx:if="{{article.summary}}"><view class="summary-section"><view class="summary-card"><text class="summary-text">{{article.summary}}</text></view></view></block><view class="article-content"><rich-text class="rich-content" nodes="{{$root.m1}}"></rich-text></view></view></block><block wx:else><block wx:if="{{error}}"><view class="error"><u-icon vue-id="270071ce-5" name="error-circle" size="60" color="#ccc" bind:__l="__l"></u-icon><text class="error-text">{{error}}</text><button data-event-opts="{{[['tap',[['loadArticleDetail',['$event']]]]]}}" class="retry-btn" bindtap="__e">重试</button></view></block></block></block></view>