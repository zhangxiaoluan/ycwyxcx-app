.task-list-page {
  background: #f5f5f5;
  min-height: 100vh;
}
.task-list-page .header {
  background: linear-gradient(135deg, #3b5598 0%, #5a7bcd 100%);
  padding: 40rpx 30rpx;
  color: white;
}
.task-list-page .header .title {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
}
.task-list-page .header .task-stats {
  display: flex;
  gap: 40rpx;
}
.task-list-page .header .task-stats .stat-item {
  text-align: center;
}
.task-list-page .header .task-stats .stat-item .stat-value {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 6rpx;
}
.task-list-page .header .task-stats .stat-item .stat-label {
  font-size: 22rpx;
  opacity: 0.8;
}
.task-list-page .content {
  padding: 30rpx;
}
.task-list-page .content .task-tabs {
  background: white;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  display: flex;
}
.task-list-page .content .task-tabs .tab-item {
  flex: 1;
  text-align: center;
  padding: 15rpx 0;
  position: relative;
}
.task-list-page .content .task-tabs .tab-item text {
  font-size: 26rpx;
  color: #666;
  transition: color 0.3s;
}
.task-list-page .content .task-tabs .tab-item.active text {
  color: #3b5598;
  font-weight: 600;
}
.task-list-page .content .task-tabs .tab-item.active::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #3b5598;
  border-radius: 2rpx;
}
.task-list-page .content .task-tabs .tab-item .badge {
  position: absolute;
  top: 10rpx;
  right: 50%;
  -webkit-transform: translateX(20rpx);
          transform: translateX(20rpx);
  background: #f5222d;
  color: white;
  font-size: 20rpx;
  padding: 2rpx 8rpx;
  border-radius: 12rpx;
  min-width: 24rpx;
  text-align: center;
}
.task-list-page .content .task-actions {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}
.task-list-page .content .task-actions .action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 70rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  font-weight: 600;
  border: none;
}
.task-list-page .content .task-actions .action-btn text {
  margin-left: 8rpx;
}
.task-list-page .content .task-actions .action-btn.publish {
  flex: 2;
  background: #3b5598;
  color: white;
}
.task-list-page .content .task-actions .action-btn.filter {
  flex: 1;
  background: white;
  color: #3b5598;
  border: 1rpx solid #e0e0e0;
}
.task-list-page .content .task-list .task-item {
  background: white;
  border-radius: 12rpx;
  padding: 25rpx;
  margin-bottom: 20rpx;
  transition: -webkit-transform 0.2s;
  transition: transform 0.2s;
  transition: transform 0.2s, -webkit-transform 0.2s;
}
.task-list-page .content .task-list .task-item:active {
  -webkit-transform: scale(0.98);
          transform: scale(0.98);
}
.task-list-page .content .task-list .task-item .task-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}
.task-list-page .content .task-list .task-item .task-header .task-type {
  display: flex;
  align-items: center;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  color: white;
}
.task-list-page .content .task-list .task-item .task-header .task-type text {
  margin-left: 6rpx;
}
.task-list-page .content .task-list .task-item .task-header .task-type.repair {
  background: #ff6b35;
}
.task-list-page .content .task-list .task-item .task-header .task-type.cleaning {
  background: #07c160;
}
.task-list-page .content .task-list .task-item .task-header .task-type.delivery {
  background: #3b5598;
}
.task-list-page .content .task-list .task-item .task-header .task-type.other {
  background: #9c27b0;
}
.task-list-page .content .task-list .task-item .task-header .task-status {
  font-size: 22rpx;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
}
.task-list-page .content .task-list .task-item .task-header .task-status.pending {
  background: #fff7e6;
  color: #fa8c16;
}
.task-list-page .content .task-list .task-item .task-header .task-status.completed {
  background: #f6ffed;
  color: #52c41a;
}
.task-list-page .content .task-list .task-item .task-content {
  margin-bottom: 15rpx;
}
.task-list-page .content .task-list .task-item .task-content .task-title {
  display: block;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
  line-height: 1.4;
}
.task-list-page .content .task-list .task-item .task-content .task-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.task-list-page .content .task-list .task-item .task-info {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}
.task-list-page .content .task-list .task-item .task-info .task-meta {
  flex: 1;
}
.task-list-page .content .task-list .task-item .task-info .task-meta .meta-item {
  display: flex;
  align-items: center;
  font-size: 22rpx;
  color: #999;
  margin-bottom: 6rpx;
}
.task-list-page .content .task-list .task-item .task-info .task-meta .meta-item u-icon {
  margin-right: 6rpx;
}
.task-list-page .content .task-list .task-item .task-info .task-meta .meta-item:last-child {
  margin-bottom: 0;
}
.task-list-page .content .task-list .task-item .task-info .task-reward {
  text-align: right;
}
.task-list-page .content .task-list .task-item .task-info .task-reward .reward-label {
  display: block;
  font-size: 20rpx;
  color: #999;
  margin-bottom: 4rpx;
}
.task-list-page .content .task-list .task-item .task-info .task-reward .reward-value {
  font-size: 26rpx;
  color: #ff6b35;
  font-weight: 600;
}
.task-list-page .content .empty-state {
  text-align: center;
  padding: 100rpx 30rpx;
}
.task-list-page .content .empty-state .empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}
.task-list-page .content .empty-state .empty-text {
  display: block;
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
  font-weight: 600;
}
.task-list-page .content .empty-state .empty-desc {
  display: block;
  font-size: 26rpx;
  color: #999;
  margin-bottom: 40rpx;
}
.task-list-page .content .empty-state .empty-action-btn {
  background: #3b5598;
  color: white;
  border: none;
  border-radius: 20rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: 600;
  display: inline-flex;
  align-items: center;
}
.task-list-page .content .empty-state .empty-action-btn text {
  margin-left: 10rpx;
}
.task-list-page .filter-form .filter-item {
  margin-bottom: 30rpx;
}
.task-list-page .filter-form .filter-item .filter-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}
.task-list-page .filter-form .filter-item .filter-options .option-item {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}
.task-list-page .filter-form .filter-item .filter-options .option-item text {
  margin-left: 15rpx;
  font-size: 26rpx;
  color: #333;
}
