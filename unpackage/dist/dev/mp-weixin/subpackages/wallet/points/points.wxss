.points-page {
  background: #f5f5f5;
  min-height: 100vh;
}
.points-page .header {
  background: #3b5598;
  padding: 40rpx 30rpx;
  color: white;
}
.points-page .header .title {
  font-size: 36rpx;
  font-weight: 600;
}
.points-page .content {
  padding: 30rpx;
}
.points-page .content .points-card {
  background: linear-gradient(135deg, #3b5598 0%, #5a7bcd 100%);
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  color: white;
}
.points-page .content .points-card .points-info {
  text-align: center;
  margin-bottom: 30rpx;
}
.points-page .content .points-card .points-info .points-label {
  display: block;
  font-size: 26rpx;
  opacity: 0.8;
  margin-bottom: 10rpx;
}
.points-page .content .points-card .points-info .points-amount {
  font-size: 48rpx;
  font-weight: 700;
}
.points-page .content .points-card .points-actions {
  display: flex;
  gap: 20rpx;
}
.points-page .content .points-card .points-actions .action-btn {
  flex: 1;
  height: 70rpx;
  border-radius: 35rpx;
  font-size: 26rpx;
  font-weight: 600;
  border: none;
}
.points-page .content .points-card .points-actions .action-btn.earn {
  background: rgba(255, 255, 255, 0.2);
  color: white;
}
.points-page .content .points-card .points-actions .action-btn.exchange {
  background: white;
  color: #3b5598;
}
.points-page .content .section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}
.points-page .content .section .section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}
.points-page .content .section .tabs {
  display: flex;
  margin-bottom: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}
.points-page .content .section .tabs .tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  position: relative;
}
.points-page .content .section .tabs .tab-item text {
  font-size: 28rpx;
  color: #666;
  transition: color 0.3s;
}
.points-page .content .section .tabs .tab-item.active text {
  color: #3b5598;
  font-weight: 600;
}
.points-page .content .section .tabs .tab-item.active::after {
  content: "";
  position: absolute;
  bottom: -1rpx;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #3b5598;
  border-radius: 2rpx;
}
.points-page .content .section .points-list .points-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}
.points-page .content .section .points-list .points-item:last-child {
  border-bottom: none;
}
.points-page .content .section .points-list .points-item .points-info {
  flex: 1;
}
.points-page .content .section .points-list .points-item .points-info .points-title {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}
.points-page .content .section .points-list .points-item .points-info .points-time {
  font-size: 24rpx;
  color: #999;
}
.points-page .content .section .points-list .points-item .points-amount {
  font-size: 30rpx;
  font-weight: 600;
}
.points-page .content .section .points-list .points-item .points-amount.earn {
  color: #07c160;
}
.points-page .content .section .points-list .points-item .points-amount.spend {
  color: #f5222d;
}
.points-page .content .section .tasks-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}
.points-page .content .section .tasks-grid .task-card {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  transition: -webkit-transform 0.2s;
  transition: transform 0.2s;
  transition: transform 0.2s, -webkit-transform 0.2s;
}
.points-page .content .section .tasks-grid .task-card:active {
  -webkit-transform: scale(0.95);
          transform: scale(0.95);
}
.points-page .content .section .tasks-grid .task-card .task-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: white;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 15rpx;
}
.points-page .content .section .tasks-grid .task-card .task-title {
  display: block;
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}
.points-page .content .section .tasks-grid .task-card .task-points {
  display: block;
  font-size: 24rpx;
  color: #ff6b35;
  font-weight: 600;
  margin-bottom: 12rpx;
}
.points-page .content .section .tasks-grid .task-card .task-status {
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  background: #e6f7ff;
  color: #1890ff;
}
.points-page .content .section .tasks-grid .task-card .task-status.completed {
  background: #f6ffed;
  color: #52c41a;
}
