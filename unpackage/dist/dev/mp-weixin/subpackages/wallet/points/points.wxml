ew><text class="task-title">{{task.title}}</text><text class="task-points">{{"+"+task.points+"积分"}}</text><text class="{{['task-status',(task.completed)?'completed':'']}}">{{''+(task.completed?'已完成':'去完成')+''}}</text></view></block></view></view></block></view></view>