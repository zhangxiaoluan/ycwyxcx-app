.points-mall-page {
  background: #f5f5f5;
  min-height: 100vh;
}
.points-mall-page .header {
  background: linear-gradient(135deg, #3b5598 0%, #5a7bcd 100%);
  padding: 40rpx 30rpx;
  color: white;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.points-mall-page .header .title {
  font-size: 36rpx;
  font-weight: 600;
}
.points-mall-page .header .points-info {
  text-align: right;
}
.points-mall-page .header .points-info .points-label {
  display: block;
  font-size: 22rpx;
  opacity: 0.8;
  margin-bottom: 6rpx;
}
.points-mall-page .header .points-info .points-amount {
  font-size: 32rpx;
  font-weight: 700;
}
.points-mall-page .content {
  padding: 30rpx;
}
.points-mall-page .content .category-tabs {
  background: white;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}
.points-mall-page .content .category-tabs .tab-scroll {
  white-space: nowrap;
}
.points-mall-page .content .category-tabs .tab-scroll .tab-item {
  display: inline-block;
  text-align: center;
  padding: 15rpx 30rpx;
  position: relative;
  margin-right: 20rpx;
}
.points-mall-page .content .category-tabs .tab-scroll .tab-item text {
  font-size: 26rpx;
  color: #666;
  transition: color 0.3s;
}
.points-mall-page .content .category-tabs .tab-scroll .tab-item.active text {
  color: #3b5598;
  font-weight: 600;
}
.points-mall-page .content .category-tabs .tab-scroll .tab-item.active::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #3b5598;
  border-radius: 2rpx;
}
.points-mall-page .content .category-tabs .tab-scroll .tab-item:last-child {
  margin-right: 0;
}
.points-mall-page .content .goods-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}
.points-mall-page .content .goods-grid .goods-item {
  background: white;
  border-radius: 12rpx;
  overflow: hidden;
  transition: -webkit-transform 0.2s;
  transition: transform 0.2s;
  transition: transform 0.2s, -webkit-transform 0.2s;
}
.points-mall-page .content .goods-grid .goods-item:active {
  -webkit-transform: scale(0.95);
          transform: scale(0.95);
}
.points-mall-page .content .goods-grid .goods-item .goods-image {
  position: relative;
  height: 200rpx;
}
.points-mall-page .content .goods-grid .goods-item .goods-image image {
  width: 100%;
  height: 100%;
}
.points-mall-page .content .goods-grid .goods-item .goods-image .goods-tag {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  background: #ff6b35;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}
.points-mall-page .content .goods-grid .goods-item .goods-image .goods-tag.hot {
  background: #e74c3c;
}
.points-mall-page .content .goods-grid .goods-item .goods-image .goods-tag:not(.hot) {
  background: #95a5a6;
}
.points-mall-page .content .goods-grid .goods-item .goods-info {
  padding: 20rpx;
}
.points-mall-page .content .goods-grid .goods-item .goods-info .goods-name {
  display: block;
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
  line-height: 1.3;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.points-mall-page .content .goods-grid .goods-item .goods-info .goods-desc {
  display: block;
  font-size: 22rpx;
  color: #999;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.points-mall-page .content .goods-grid .goods-item .goods-info .goods-points {
  display: flex;
  align-items: baseline;
}
.points-mall-page .content .goods-grid .goods-item .goods-info .goods-points .points-value {
  font-size: 30rpx;
  color: #ff6b35;
  font-weight: 600;
}
.points-mall-page .content .goods-grid .goods-item .goods-info .goods-points .points-label {
  font-size: 20rpx;
  color: #ff6b35;
  margin-left: 4rpx;
}
.points-mall-page .content .goods-grid .goods-item .goods-info .goods-stock {
  margin-top: 8rpx;
}
.points-mall-page .content .goods-grid .goods-item .goods-info .goods-stock text {
  font-size: 20rpx;
  color: #999;
}
.points-mall-page .content .empty-state {
  text-align: center;
  padding: 100rpx 30rpx;
}
.points-mall-page .content .empty-state .empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}
.points-mall-page .content .empty-state .empty-text {
  display: block;
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
  font-weight: 600;
}
.points-mall-page .content .empty-state .empty-desc {
  display: block;
  font-size: 26rpx;
  color: #999;
}
.points-mall-page .content .loading-state {
  text-align: center;
  padding: 100rpx 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.points-mall-page .content .loading-state .loading-text {
  font-size: 26rpx;
  color: #999;
  margin-top: 20rpx;
}
.points-mall-page .goods-detail .detail-image {
  width: 100%;
  height: 300rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}
.points-mall-page .goods-detail .detail-info .detail-desc {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 20rpx;
}
.points-mall-page .goods-detail .detail-info .detail-points {
  display: flex;
  align-items: baseline;
  margin-bottom: 15rpx;
}
.points-mall-page .goods-detail .detail-info .detail-points .points-value {
  font-size: 36rpx;
  color: #ff6b35;
  font-weight: 600;
}
.points-mall-page .goods-detail .detail-info .detail-points .points-label {
  font-size: 24rpx;
  color: #ff6b35;
  margin-left: 6rpx;
}
.points-mall-page .goods-detail .detail-info .detail-stock {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
}
.points-mall-page .goods-detail .detail-info .detail-rules .rules-title {
  display: block;
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 10rpx;
}
.points-mall-page .goods-detail .detail-info .detail-rules .rules-content {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
  white-space: pre-line;
}
