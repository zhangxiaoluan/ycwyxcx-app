.wallet-page {
  background: #f5f5f5;
  min-height: 100vh;
  padding: 35rpx;
}
.wallet-page .balance-card {
  background: white;
  border-radius: 16rpx;
  padding: 40rpx 35rpx;
}
.wallet-page .balance-card .balance-info {
  text-align: center;
  margin-bottom: 40rpx;
}
.wallet-page .balance-card .balance-info .balance-label {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}
.wallet-page .balance-card .balance-info .balance-amount {
  font-size: 48rpx;
  font-weight: 700;
  color: #3b5598;
}
.wallet-page .balance-card .actions {
  display: flex;
  gap: 20rpx;
}
.wallet-page .balance-card .actions .action-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
}
.wallet-page .balance-card .actions .action-btn.withdraw {
  background: #3b5598;
  color: white;
}
.wallet-page .balance-card .actions .action-btn.recharge {
  background: #f0f0f0;
  color: #333;
}
.wallet-page .section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-top: 40rpx;
}
.wallet-page .section .section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
}
.wallet-page .section .transaction-list .transaction-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}
.wallet-page .section .transaction-list .transaction-item:last-child {
  border-bottom: none;
}
.wallet-page .section .transaction-list .transaction-item .transaction-info .transaction-title {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}
.wallet-page .section .transaction-list .transaction-item .transaction-info .transaction-time {
  font-size: 24rpx;
  color: #999;
}
.wallet-page .section .transaction-list .transaction-item .transaction-amount {
  font-size: 30rpx;
  font-weight: 600;
}
.wallet-page .section .transaction-list .transaction-item .transaction-amount.income {
  color: #52c41a;
}
.wallet-page .section .transaction-list .transaction-item .transaction-amount.expense {
  color: #f5222d;
}
