.withdraw-page {
  background: #f5f5f5;
  min-height: 100vh;
}
.withdraw-page .header {
  background: #3b5598;
  padding: 40rpx 30rpx;
  color: white;
}
.withdraw-page .header .title {
  font-size: 36rpx;
  font-weight: 600;
}
.withdraw-page .content {
  padding: 30rpx;
}
.withdraw-page .content .balance-card {
  background: linear-gradient(135deg, #3b5598 0%, #5a7bcd 100%);
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  color: white;
  text-align: center;
}
.withdraw-page .content .balance-card .balance-label {
  display: block;
  font-size: 26rpx;
  opacity: 0.8;
  margin-bottom: 10rpx;
}
.withdraw-page .content .balance-card .balance-amount {
  font-size: 48rpx;
  font-weight: 700;
}
.withdraw-page .content .form-section {
  background: white;
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
}
.withdraw-page .content .form-section .form-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
}
.withdraw-page .content .form-section .form-item {
  margin-bottom: 30rpx;
}
.withdraw-page .content .form-section .form-item .form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}
.withdraw-page .content .form-section .form-item .amount-input-wrapper {
  display: flex;
  align-items: center;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  background: #fafafa;
}
.withdraw-page .content .form-section .form-item .amount-input-wrapper .currency-symbol {
  font-size: 40rpx;
  color: #333;
  margin-right: 10rpx;
}
.withdraw-page .content .form-section .form-item .amount-input-wrapper .input-placeholder {
  color: #999;
  font-weight: normal;
  font-size: 25rpx;
}
.withdraw-page .content .form-section .form-item .amount-input-wrapper .amount-input {
  flex: 1;
  height: 80rpx;
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
}
.withdraw-page .content .form-section .form-item .amount-tips {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 15rpx;
}
.withdraw-page .content .form-section .form-item .amount-tips text {
  font-size: 24rpx;
  color: #999;
}
.withdraw-page .content .form-section .form-item .amount-tips .all-btn {
  background: none;
  border: none;
  color: #3b5598;
  font-size: 24rpx;
  padding: 0 15rpx;
  margin: 0;
}
.withdraw-page .content .form-section .form-item .bank-card-selector {
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 25rpx 20rpx;
  background: #fafafa;
}
.withdraw-page .content .form-section .form-item .bank-card-selector .bank-card-info {
  display: flex;
  align-items: center;
  flex: 1;
}
.withdraw-page .content .form-section .form-item .bank-card-selector .bank-card-info .bank-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: rgba(59, 85, 152, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}
.withdraw-page .content .form-section .form-item .bank-card-selector .bank-card-info .bank-details .bank-name {
  display: block;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 6rpx;
}
.withdraw-page .content .form-section .form-item .bank-card-selector .bank-card-info .bank-details .card-number {
  font-size: 24rpx;
  color: #666;
}
.withdraw-page .content .form-section .form-item .bank-card-selector .select-placeholder {
  display: flex;
  align-items: center;
  color: #999;
}
.withdraw-page .content .form-section .form-item .bank-card-selector .select-placeholder text {
  font-size: 28rpx;
  margin-left: 10rpx;
}
.withdraw-page .content .form-section .fee-info {
  background: #f8f9fa;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}
.withdraw-page .content .form-section .fee-info text {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}
.withdraw-page .content .form-section .fee-info text:last-child {
  margin-bottom: 0;
  font-weight: 500;
  color: #3b5598;
}
.withdraw-page .content .form-section .withdraw-btn {
  width: 100%;
  height: 80rpx;
  background: #3b5598;
  color: white;
  border: none;
  border-radius: 8rpx;
  font-size: 30rpx;
  font-weight: 600;
}
.withdraw-page .content .form-section .withdraw-btn:disabled {
  background: #ccc;
}
.withdraw-page .content .tips-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
}
.withdraw-page .content .tips-section .tips-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 20rpx;
}
.withdraw-page .content .tips-section .tips-list .tip-item {
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 10rpx;
}
.withdraw-page .content .tips-section .tips-list .tip-item:last-child {
  margin-bottom: 0;
}
