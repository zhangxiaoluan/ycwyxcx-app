.family-members-page {
  background: linear-gradient(to right, #e0ecfa 0%, #f4f6f9 50%, #f6f4fc 100%);
  min-height: 100vh;
}
.family-members-page .header {
  background: #3b5598;
  padding: 40rpx 35rpx;
  color: white;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.family-members-page .header .title {
  font-size: 36rpx;
  font-weight: 600;
}
.family-members-page .header .add-btn {
  display: flex;
  align-items: center;
  background: #415594;
  border-radius: 20rpx;
  padding: 12rpx 20rpx;
  font-size: 24rpx;
}
.family-members-page .header .add-btn text {
  margin-left: 8rpx;
}
.family-members-page .content {
  padding: 35rpx;
}
.family-members-page .content .members-list .member-item {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.family-members-page .content .members-list .member-item .member-info {
  display: flex;
  align-items: center;
  flex: 1;
}
.family-members-page .content .members-list .member-item .member-info .member-avatar {
  margin-right: 20rpx;
}
.family-members-page .content .members-list .member-item .member-info .member-avatar .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background: #f0f0f0;
}
.family-members-page .content .members-list .member-item .member-info .member-details {
  flex: 1;
}
.family-members-page .content .members-list .member-item .member-info .member-details .member-name {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}
.family-members-page .content .members-list .member-item .member-info .member-details .member-relation {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
}
.family-members-page .content .members-list .member-item .member-info .member-details .member-permissions {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}
.family-members-page .content .members-list .member-item .member-info .member-details .member-permissions .permission-tag {
  background: #e6f7ff;
  color: #1890ff;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}
.family-members-page .content .members-list .member-item .member-actions {
  display: flex;
  gap: 15rpx;
}
.family-members-page .content .members-list .member-item .member-actions .action-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid #e0e0e0;
  background: white;
}
.family-members-page .content .members-list .member-item .member-actions .action-btn.edit {
  border-color: #3b5598;
}
.family-members-page .content .members-list .member-item .member-actions .action-btn.delete {
  border-color: #f5222d;
}
.family-members-page .content .empty-state {
  text-align: center;
  padding: 100rpx 30rpx;
}
.family-members-page .content .empty-state .empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}
.family-members-page .content .empty-state .empty-text {
  display: block;
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
  font-weight: 600;
}
.family-members-page .content .empty-state .empty-desc {
  display: block;
  font-size: 26rpx;
  color: #999;
  margin-bottom: 40rpx;
}
.family-members-page .content .empty-state .empty-add-btn {
  background: #3b5598;
  color: white;
  border: none;
  border-radius: 20rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: 600;
  display: inline-flex;
  align-items: center;
}
.family-members-page .content .empty-state .empty-add-btn text {
  margin-left: 10rpx;
}
.family-members-page .modal-form .form-item {
  margin-bottom: 30rpx;
}
.family-members-page .modal-form .form-item .form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}
.family-members-page .modal-form .form-item .form-input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}
.family-members-page .modal-form .form-item .picker {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  display: flex;
  align-items: center;
}
.family-members-page .modal-form .form-item .avatar-upload {
  border: 2rpx dashed #d9d9d9;
  border-radius: 12rpx;
  padding: 40rpx;
  text-align: center;
}
.family-members-page .modal-form .form-item .avatar-upload .avatar-preview {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
}
.family-members-page .modal-form .form-item .avatar-upload .avatar-placeholder {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f8f9fa;
}
.family-members-page .modal-form .form-item .permissions-group .permission-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.family-members-page .modal-form .form-item .permissions-group .permission-item text {
  margin-left: 15rpx;
  font-size: 28rpx;
  color: #333;
}
