.house-bindings-page {
  background: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 120rpx;
}
.house-bindings-page .bindings-list {
  padding: 20rpx;
}
.house-bindings-page .binding-item {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  position: relative;
}
.house-bindings-page .binding-item .status-badge {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}
.house-bindings-page .binding-item .status-badge.status-pending {
  background: #fff3cd;
  color: #856404;
}
.house-bindings-page .binding-item .status-badge.status-approved {
  background: #d4edda;
  color: #155724;
}
.house-bindings-page .binding-item .status-badge.status-rejected {
  background: #f8d7da;
  color: #721c24;
}
.house-bindings-page .binding-item .address-info {
  margin-bottom: 20rpx;
  padding-right: 120rpx;
}
.house-bindings-page .binding-item .address-info .community-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}
.house-bindings-page .binding-item .user-info,
.house-bindings-page .binding-item .audit-info {
  margin-bottom: 20rpx;
}
.house-bindings-page .binding-item .user-info .info-row,
.house-bindings-page .binding-item .audit-info .info-row {
  display: flex;
  margin-bottom: 12rpx;
  font-size: 28rpx;
}
.house-bindings-page .binding-item .user-info .info-row .label,
.house-bindings-page .binding-item .audit-info .info-row .label {
  color: #999;
  width: 100rpx;
  flex-shrink: 0;
}
.house-bindings-page .binding-item .user-info .info-row .value,
.house-bindings-page .binding-item .audit-info .info-row .value {
  color: #333;
  flex: 1;
}
.house-bindings-page .binding-item .action-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 20rpx;
}
.house-bindings-page .binding-item .action-buttons uni-button:after {
  border: unset;
}
.house-bindings-page .binding-item .action-buttons button {
  flex: 1;
  height: 70rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
}
.house-bindings-page .binding-item .action-buttons button.btn-cancel {
  background: #ffc107;
  color: #333;
}
.house-bindings-page .binding-item .action-buttons button.btn-unbind {
  background: #dc3545;
  color: white;
}
.house-bindings-page .binding-item .action-buttons button.btn-reapply {
  background: #007bff;
  color: white;
}
.house-bindings-page .empty-state {
  text-align: center;
  padding: 100rpx 0;
}
.house-bindings-page .empty-state .empty-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
  display: block;
}
.house-bindings-page .empty-state .empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 12rpx;
  display: block;
}
.house-bindings-page .empty-state .empty-desc {
  font-size: 28rpx;
  color: #ccc;
  display: block;
}
.house-bindings-page .loading-more {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 28rpx;
}
.house-bindings-page .fab-container {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  z-index: 1000;
}
.house-bindings-page .fab-container .fab-button {
  background: #3b5598;
  color: white;
  border: none;
  border-radius: 50rpx;
  height: 90rpx;
  padding: 0 40rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  box-shadow: 0 4rpx 20rpx rgba(59, 85, 152, 0.3);
  font-size: 28rpx;
  font-weight: 600;
}
.house-bindings-page .fab-container .fab-button .fab-icon {
  font-size: 36rpx;
  line-height: 1;
}
.house-bindings-page .fab-container .fab-button .fab-text {
  line-height: 1;
}
