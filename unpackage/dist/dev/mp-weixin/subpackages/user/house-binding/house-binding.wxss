.house-binding-page {
  background: #f5f5f5;
  min-height: 100vh;
}
.house-binding-page .content {
  padding: 35rpx;
}
.house-binding-page .content .form-section {
  background: white;
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
}
.house-binding-page .content .form-section .form-item {
  margin-bottom: 40rpx;
}
.house-binding-page .content .form-section .form-item .label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}
.house-binding-page .content .form-section .form-item .picker-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 80rpx;
  border-bottom: 1rpx solid #e0e0e0;
  padding: 0 20rpx;
}
.house-binding-page .content .form-section .form-item .picker-content .picker-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}
.house-binding-page .content .form-section .form-item .picker-content .picker-text.placeholder {
  color: #999;
}
.house-binding-page .content .form-section .form-item .picker-content .picker-arrow {
  font-size: 20rpx;
  color: #999;
  transition: -webkit-transform 0.3s;
  transition: transform 0.3s;
  transition: transform 0.3s, -webkit-transform 0.3s;
}
.house-binding-page .content .form-section .form-item .input {
  height: 80rpx;
  border-bottom: 1rpx solid #e0e0e0;
  padding: 0 20rpx;
  font-size: 28rpx;
}
.house-binding-page .content .form-section .form-item .textarea {
  width: 100%;
  min-height: 120rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  line-height: 1.5;
  box-sizing: border-box;
}
.house-binding-page .content .form-section .submit-btn {
  width: 100%;
  height: 80rpx;
  background: #3b5598;
  color: white;
  border: none;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 600;
  margin-top: 20rpx;
  transition: all 0.3s;
  display: flex;
  align-items: center;
  justify-content: center;
  letter-spacing: 2rpx;
}
.house-binding-page .content .form-section .submit-btn.disabled {
  background: rgba(59, 85, 152, 0.8);
}
.house-binding-page .content .form-section .submit-btn:not(.disabled):active {
  background: #2d4a7d;
  -webkit-transform: scale(0.98);
          transform: scale(0.98);
}
