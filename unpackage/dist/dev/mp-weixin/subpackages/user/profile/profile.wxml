<view class="profile-page"><view class="content"><view data-event-opts="{{[['tap',[['chooseavatar',['$event']]]]]}}" class="cell-item" bindtap="__e"><view class="cell-left"><text class="cell-title">头像</text></view><view class="cell-right"><view class="avatar-wrapper"><image class="avatar-image" src="{{userInfo.avatar||'/static/default-avatar.png'}}" mode="aspectFill"></image><button class="avatar-hidden-btn" open-type="chooseAvatar" data-event-opts="{{[['chooseavatar',[['chooseavatar',['$event']]]]]}}" bindchooseavatar="__e"></button></view></view></view><view class="cell-item"><view class="cell-left"><text class="cell-title">昵称</text></view><view class="cell-right"><input class="cell-input" type="nickname" placeholder="请输入昵称" data-event-opts="{{[['input',[['__set_model',['$0','name','$event',[]],['userInfo']]]]]}}" value="{{userInfo.name}}" bindinput="__e"/></view></view><view class="cell-item"><view class="cell-left"><text class="cell-title">电话</text></view><view class="cell-right"><input class="cell-input" type="text" readonly="{{true}}" disabled="{{true}}" placeholder="请输入昵称" data-event-opts="{{[['input',[['__set_model',['$0','cellphone','$event',[]],['userInfo']]]]]}}" value="{{userInfo.cellphone}}" bindinput="__e"/></view></view><view class="cell-item"><view class="cell-left"><text class="cell-title">性别</text></view><view class="cell-right"><radio-group data-event-opts="{{[['change',[['onGenderChange',['$event']]]]]}}" class="gender-group" bindchange="__e"><label class="radio-item"><radio value="男" color="#3b5598" checked="{{userInfo.gender==='男'}}"></radio><text>男</text></label><label class="radio-item"><radio value="女" color="#3b5598" checked="{{userInfo.gender==='女'}}"></radio><text>女</text></label></radio-group></view></view><view class="cell-item"><view class="cell-left"><text class="cell-title">生日</text></view><view class="cell-right"><picker mode="date" value="{{userInfo.birthDate}}" data-event-opts="{{[['change',[['onBirthdayChange',['$event']]]]]}}" b