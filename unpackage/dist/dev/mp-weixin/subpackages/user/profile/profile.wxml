<view class="profile-page"><view class="content"><view class="form-item"><text class="label">头像</text><view data-event-opts="{{[['tap',[['chooseAvatar',['$event']]]]]}}" class="avatar-section" bindtap="__e"><image class="avatar" src="{{userInfo.avatar}}" mode="aspectFill"></image><text class="change-text">点击更换</text></view></view><view class="form-item"><text class="label">昵称</text><input class="input" placeholder="请输入昵称" data-event-opts="{{[['input',[['__set_model',['$0','nickname','$event',[]],['userInfo']]]]]}}" value="{{userInfo.nickname}}" bindinput="__e"/></view><view class="form-item"><text class="label">性别</text><radio-group data-event-opts="{{[['change',[['onGenderChange',['$event']]]]]}}" bindchange="__e"><label class="radio-item"><radio value="male" color="#3b5598" checked="{{userInfo.gender==='male'}}"></radio><text>男</text></label><label class="radio-item"><radio value="female" color="#3b5598" checked="{{userInfo.gender==='female'}}"></radio><text>女</text></label></radio-group></view><view class="form-item"><text class="label">生日</text><picker mode="date" value="{{userInfo.birthday}}" data-event-opts="{{[['change',[['onBirthdayChange',['$event']]]]]}}" bindchange="__e"><view class="picker">{{userInfo.birthday||'请选择生日'}}</view></picker></view><button data-event-opts="{{[['tap',[['saveProfile',['$event']]]]]}}" class="save-btn" bindtap="__e">保存</button></view></view>