<view class="identity-verification-page"><view class="content"><view class="{{['verification-status',(isVerified)?'verified':'']}}"><view class="status-icon"><u-icon vue-id="7f7c7e75-1" name="checkmark-circle" size="60" color="{{isVerified?'#07c160':'#ccc'}}" bind:__l="__l"></u-icon></view><text class="status-text">{{isVerified?'已认证':'未认证'}}</text><text class="status-desc">{{isVerified?'您已完成实名认证':'请完成实名认证以使用更多功能'}}</text></view><block wx:if="{{!isVerified}}"><view class="verification-form"><view class="form-title"><text>身份信息</text><text class="required">*</text><text class="required-text">为必填项</text></view><view class="form-item"><text class="form-label">姓名<text class="required">*</text></text><input class="form-input" placeholder="请输入真实姓名" data-event-opts="{{[['input',[['__set_model',['$0','name','$event',[]],['formData']]]]]}}" value="{{formData.name}}" bindinput="__e"/></view><view class="form-item"><text class="form-label">身份证号<text class="required">*</text></text><input class="form-input" placeholder="请输入18位身份证号" maxlength="18" data-event-opts="{{[['input',[['__set_model',['$0','idCard','$event',[]],['formData']]]]]}}" value="{{formData.idCard}}" bindinput="__e"/></view><view class="form-item"><text class="form-label">手机号<text class="required">*</text></text><input class="form-input" placeholder="请输入手机号" type="number" data-event-opts="{{[['input',[['__set_model',['$0','phone','$event',[]],['formData']]]]]}}" value="{{formData.phone}}" bindinput="__e"/></view><view class="upload-section"><view class="upload-title"><text>证件照片</text><text class="required">*</text></view><view class="upload-grid"><view data-event-opts="{{[['tap',[['uploadIdCard',['front']]]]]}}" class="upload-item" bindtap="__e"><block wx:if="{{formData.idCardFront}}"><image class="preview-image" src="{{formData.idCardFront}}" mode="aspectFit"></image></block><block wx:else><view class="upload-placeholder"><u-icon vue-id="7f7c7e75-2" name="camera" size="40" color="#999" bind:__l="__l"></u-icon><text class="upload-text">身份证正面</text></view></block></view><view data-event-opts="{{[['tap',[['uploadIdCard',['back']]]]]}}" class="upload-item" bindtap="__e"><block wx:if="{{formData.idCardBack}}"><image class="preview-image" src="{{formData.idCardBack}}" mode="aspectFit"></image></block><block wx:else><view class="upload-placeholder"><u-icon vue-id="7f7c7e75-3" name="camera" size="40" color="#999" bind:__l="__l"></u-icon><text class="upload-text">身份证反面</text></view></block></view></view></view><view class="agreement"><checkbox-group data-event-opts="{{[['change',[['onAgreementChange',['$event']]]]]}}" bindchange="__e"><checkbox style="transform:scale(0.7);" value="agreed" color="#3b5598" checked="{{agreedToTerms}}"></checkbox><text class="agreement-text"> 我已阅读并同意 <text class="link-a">《实名认证服务协议》</text></text></checkbox-group></view><button data-event-opts="{{[['tap',[['submitVerification',['$event']]]]]}}" class="submit-btn" bindtap="__e"> 提交认证 </button></view></block><block wx:else><view class="verified-info"><view class="info-card"><view class="info-item"><text class="info-label">认证姓名：</text><text class="info-value">{{verifiedInfo.name}}</text></view><view class="info-item"><text class="info-label">身份证号：</text><text class="info-value">{{$root.m0}}</text></view><view class="info-item"><text class="info-label">认证时间：</text><text class="info-value">{{verifiedInfo.verifiedTime}}</text></view></view></view></block></view></view>