.settings-page {
  background: #f5f5f5;
  min-height: 100vh;
}
.settings-page .header {
  background: #3b5598;
  padding: 40rpx 30rpx;
  color: white;
}
.settings-page .header .title {
  font-size: 36rpx;
  font-weight: 600;
}
.settings-page .content {
  padding: 30rpx;
}
.settings-page .content .settings-section {
  margin-bottom: 30rpx;
}
.settings-page .content .settings-section .section-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
  padding-left: 10rpx;
}
.settings-page .content .settings-section .settings-list {
  background: white;
  border-radius: 12rpx;
  overflow: hidden;
}
.settings-page .content .settings-section .settings-list .setting-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 25rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.2s;
}
.settings-page .content .settings-section .settings-list .setting-item:last-child {
  border-bottom: none;
}
.settings-page .content .settings-section .settings-list .setting-item:active {
  background-color: #f8f9fa;
}
.settings-page .content .settings-section .settings-list .setting-item .setting-info {
  display: flex;
  align-items: center;
  flex: 1;
}
.settings-page .content .settings-section .settings-list .setting-item .setting-info .setting-text {
  font-size: 28rpx;
  color: #333;
  margin-left: 20rpx;
}
.settings-page .content .settings-section .settings-list .setting-item .setting-value {
  margin-right: 15rpx;
}
.settings-page .content .settings-section .settings-list .setting-item .setting-value .value-text {
  font-size: 24rpx;
  color: #999;
}
.settings-page .content .settings-section .settings-list .setting-item switch {
  -webkit-transform: scale(0.8);
          transform: scale(0.8);
}
.settings-page .content .logout-section {
  margin-bottom: 30rpx;
}
.settings-page .content .logout-section .logout-btn {
  width: 100%;
  height: 80rpx;
  background: white;
  color: #f5222d;
  border: 1rpx solid #f5222d;
  border-radius: 12rpx;
  font-size: 30rpx;
  font-weight: 600;
}
.settings-page .content .version-info {
  text-align: center;
  padding: 20rpx;
}
.settings-page .content .version-info .version-text {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}
.settings-page .content .version-info .copyright-text {
  font-size: 22rpx;
  color: #ccc;
}
