.privacy-page {
  background: #f5f5f5;
  min-height: 100vh;
}
.privacy-page .content {
  padding: 35rpx;
}
.privacy-page .content .privacy-section, .privacy-page .content .policy-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}
.privacy-page .content .privacy-section .section-title, .privacy-page .content .policy-section .section-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 25rpx;
  position: relative;
  padding-left: 20rpx;
}
.privacy-page .content .privacy-section .section-title::before, .privacy-page .content .policy-section .section-title::before {
  content: "";
  position: absolute;
  left: 0;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  width: 6rpx;
  height: 24rpx;
  background: #3b5598;
  border-radius: 3rpx;
}
.privacy-page .content .privacy-section .privacy-list .privacy-item, .privacy-page .content .policy-section .privacy-list .privacy-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}
.privacy-page .content .privacy-section .privacy-list .privacy-item:last-child, .privacy-page .content .policy-section .privacy-list .privacy-item:last-child {
  border-bottom: none;
}
.privacy-page .content .privacy-section .privacy-list .privacy-item .privacy-info, .privacy-page .content .policy-section .privacy-list .privacy-item .privacy-info {
  flex: 1;
  margin-right: 20rpx;
}
.privacy-page .content .privacy-section .privacy-list .privacy-item .privacy-info .privacy-main, .privacy-page .content .policy-section .privacy-list .privacy-item .privacy-info .privacy-main {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}
.privacy-page .content .privacy-section .privacy-list .privacy-item .privacy-info .privacy-main .privacy-text, .privacy-page .content .policy-section .privacy-list .privacy-item .privacy-info .privacy-main .privacy-text {
  font-size: 26rpx;
  color: #333;
  margin-left: 15rpx;
}
.privacy-page .content .privacy-section .privacy-list .privacy-item .privacy-info .privacy-desc, .privacy-page .content .policy-section .privacy-list .privacy-item .privacy-info .privacy-desc {
  font-size: 22rpx;
  color: #999;
  line-height: 1.4;
  margin-left: 35rpx;
}
.privacy-page .content .privacy-section .privacy-list .privacy-item .privacy-selector, .privacy-page .content .policy-section .privacy-list .privacy-item .privacy-selector {
  display: flex;
  align-items: center;
}
.privacy-page .content .privacy-section .privacy-list .privacy-item .privacy-selector .selector-text, .privacy-page .content .policy-section .privacy-list .privacy-item .privacy-selector .selector-text {
  font-size: 24rpx;
  color: #666;
  margin-right: 10rpx;
}
.privacy-page .content .privacy-section .privacy-list .privacy-item .permission-status, .privacy-page .content .policy-section .privacy-list .privacy-item .permission-status {
  display: flex;
  align-items: center;
}
.privacy-page .content .privacy-section .privacy-list .privacy-item .permission-status text, .privacy-page .content .policy-section .privacy-list .privacy-item .permission-status text {
  font-size: 24rpx;
  color: #999;
  margin-right: 10rpx;
}
