  -webkit-transform: scale(0.8);
          transform: scale(0.8);
}
.privacy-page .content .policy-section .policy-content .policy-title {
  display: block;
  font-size: 26rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 15rpx;
}
.privacy-page .content .policy-section .policy-content .policy-summary {
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 25rpx;
}
.privacy-page .content .policy-section .policy-content .policy-links .policy-link {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.2s;
}
.privacy-page .content .policy-section .policy-content .policy-links .policy-link:last-child {
  border-bottom: none;
}
.privacy-page .content .policy-section .policy-content .policy-links .policy-link:active {
  background-color: #f8f9fa;
  margin: 0 -10rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  border-radius: 8rpx;
}
.privacy-page .content .policy-section .policy-content .policy-links .policy-link text {
  font-size: 24rpx;
  color: #3b5598;
}
.privacy-page .content .action-section {
  display: flex;
  gap: 20rpx;
}
.privacy-page .content .action-section .action-btn {
  flex: 1;
  height: 70rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  font-weight: 600;
  border: none;
}
.privacy-page .content .action-section .action-btn.secondary {
  background: white;
  color: #666;
  border: 1rpx solid #e0e0e0;
}
.privacy-page .content .action-section .action-btn.danger {
  background: #f5222d;
  color: white;
}
