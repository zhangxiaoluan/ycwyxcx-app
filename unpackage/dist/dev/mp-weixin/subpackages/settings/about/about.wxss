.about-page {
  background: #f5f5f5;
  min-height: 100vh;
}
.about-page .content {
  padding: 30rpx;
}
.about-page .content .app-info-section {
  background: white;
  border-radius: 16rpx;
  padding: 50rpx 30rpx;
  text-align: center;
  margin-bottom: 30rpx;
}
.about-page .content .app-info-section .app-logo {
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto 20rpx;
  border-radius: 24rpx;
  overflow: hidden;
}
.about-page .content .app-info-section .app-logo image {
  width: 100%;
  height: 100%;
}
.about-page .content .app-info-section .app-name {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 10rpx;
}
.about-page .content .app-info-section .app-version {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 15rpx;
}
.about-page .content .app-info-section .app-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}
.about-page .content .feature-section, .about-page .content .company-section, .about-page .content .agreement-section, .about-page .content .social-section, .about-page .content .changelog-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}
.about-page .content .feature-section .section-title, .about-page .content .company-section .section-title, .about-page .content .agreement-section .section-title, .about-page .content .social-section .section-title, .about-page .content .changelog-section .section-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 25rpx;
  position: relative;
  padding-left: 20rpx;
}
.about-page .content .feature-section .section-title::before, .about-page .content .company-section .section-title::before, .about-page .content .agreement-section .section-title::before, .about-page .content .social-section .section-title::before, .about-page .content .changelog-section .section-title::before {
  content: "";
  position: absolute;
  left: 0;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  width: 6rpx;
  height: 24rpx;
  background: #3b5598;
  border-radius: 3rpx;
}
.about-page .content .feature-section .feature-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 25rpx;
}
.about-page .content .feature-section .feature-grid .feature-item {
  text-align: center;
}
.about-page .content .feature-section .feature-grid .feature-item .feature-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: rgba(59, 85, 152, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 15rpx;
}
.about-page .content .feature-section .feature-grid .feature-item .feature-name {
  display: block;
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}
.about-page .content .feature-section .feature-grid .feature-item .feature-desc {
  font-size: 22rpx;
  color: #999;
  line-height: 1.4;
}
.about-page .content .company-section .info-list .info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}
.about-page .content .company-section .info-list .info-item:last-child {
  border-bottom: none;
}
.about-page .content .company-section .info-list .info-item .info-label {
  font-size: 26rpx;
  color: #666;
}
.about-page .content .company-section .info-list .info-item .info-value {
  font-size: 26rpx;
  color: #333;
  text-align: right;
  flex: 1;
  margin-left: 20rpx;
}
.about-page .content .company-section .info-list .info-item .info-value.link {
  color: #3b5598;
  text-decoration: underline;
}
.about-page .content .agreement-section .agreement-list .agreement-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.2s;
}
.about-page .content .agreement-section .agreement-list .agreement-item:last-child {
  border-bottom: none;
}
.about-page .content .agreement-section .agreement-list .agreement-item:active {
  background-color: #f8f9fa;
  margin: 0 -10rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  border-radius: 8rpx;
}
.about-page .content .agreement-section .agreement-list .agreement-item .agreement-name {
  font-size: 26rpx;
  color: #333;
}
.about-page .content .social-section .social-list .social-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.2s;
}
.about-page .content .social-section .social-list .social-item:last-child {
  border-bottom: none;
}
.about-page .content .social-section .social-list .social-item:active {
  background-color: #f8f9fa;
  margin: 0 -10rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  border-radius: 8rpx;
}
.about-page .content .social-section .social-list .social-item .social-icon {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background: rgba(59, 85, 152, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}
.about-page .content .social-section .social-list .social-item .social-name {
  font-size: 26rpx;
  color: #333;
  margin-right: 15rpx;
}
.about-page .content .social-section .social-list .social-item .social-account {
  font-size: 22rpx;
  color: #999;
}
.about-page .content .changelog-section .changelog-list .changelog-item .changelog-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}
.about-page .content .changelog-section .changelog-list .changelog-item .changelog-header .changelog-version {
  font-size: 26rpx;
  color: #3b5598;
  font-weight: 600;
}
.about-page .content .changelog-section .changelog-list .changelog-item .changelog-header .changelog-date {
  font-size: 22rpx;
  color: #999;
}
.about-page .content .changelog-section .changelog-list .changelog-item .changelog-content .changelog-item-text {
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 8rpx;
}
.about-page .content .changelog-section .changelog-list .changelog-item .changelog-content .changelog-item-text:last-child {
  margin-bottom: 0;
}
.about-page .content .footer-section {
  text-align: center;
  padding: 30rpx 0;
}
.about-page .content .footer-section .copyright {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}
.about-page .content .footer-section .icp {
  font-size: 22rpx;
  color: #ccc;
}
