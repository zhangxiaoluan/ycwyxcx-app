.feedback-page {
  background: #f5f5f5;
  min-height: 100vh;
}
.feedback-page .content {
  padding: 35rpx;
}
.feedback-page .content .form-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}
.feedback-page .content .form-section .form-item {
  margin-bottom: 40rpx;
}
.feedback-page .content .form-section .form-item.required .form-label::after {
  content: " *";
  color: #f5222d;
}
.feedback-page .content .form-section .form-item:last-child {
  margin-bottom: 0;
}
.feedback-page .content .form-section .form-item .form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}
.feedback-page .content .form-section .form-item .form-input {
  height: 80rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  background: #fafafa;
}
.feedback-page .content .form-section .form-item .form-textarea {
  min-height: 150rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  background: #fafafa;
  line-height: 1.5;
  width: calc(100% - 40rpx);
}
.feedback-page .content .form-section .form-item .input-count {
  font-size: 22rpx;
  color: #999;
  text-align: right;
  display: block;
  margin-top: 8rpx;
}
.feedback-page .content .form-section .form-item .type-selector {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 15rpx;
}
.feedback-page .content .form-section .form-item .type-selector .type-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 10rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  transition: all 0.3s;
}
.feedback-page .content .form-section .form-item .type-selector .type-item text {
  font-size: 22rpx;
  color: #666;
  margin-top: 8rpx;
}
.feedback-page .content .form-section .form-item .type-selector .type-item.active {
  border-color: #3b5598;
  background: rgba(59, 85, 152, 0.1);
}
.feedback-page .content .form-section .form-item .type-selector .type-item.active text {
  color: #3b5598;
  font-weight: 500;
}
.feedback-page .content .form-section .form-item .image-upload .image-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 15rpx;
}
.feedback-page .content .form-section .form-item .image-upload .image-list .image-item {
  position: relative;
  width: 100%;
  padding-top: 75%;
  border-radius: 8rpx;
  overflow: hidden;
  border: 1px solid #ebebeb;
}
.feedback-page .content .form-section .form-item .image-upload .image-list .image-item image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.feedback-page .content .form-section .form-item .image-upload .image-list .image-item .delete-image {
  position: absolute;
  top: 6rpx;
  right: 6rpx;
  width: 36rpx;
  height: 36rpx;
  border-radius: 100rpx;
  background: rgba(0, 0, 0, 0.6);
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}
.feedback-page .content .form-section .form-item .image-upload .image-list .upload-btn {
  position: relative;
  border: 2rpx dashed #d9d9d9;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}
.feedback-page .content .form-section .form-item .image-upload .image-list .upload-btn::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.feedback-page .content .form-section .form-item .image-upload .image-list .upload-btn .upload-text {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}
.feedback-page .content .form-section .form-item .image-upload .image-list .upload-btn .upload-tips {
  font-size: 20rpx;
  color: #ccc;
  margin-top: 4rpx;
}
.feedback-page .content .form-section .form-item .urgency-selector {
  display: flex;
  gap: 20rpx;
}
.feedback-page .content .form-section .form-item .urgency-selector .urgency-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  transition: all 0.3s;
}
.feedback-page .content .form-section .form-item .urgency-selector .urgency-item .urgency-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}
.feedback-page .content .form-section .form-item .urgency-selector .urgency-item .urgency-dot.blue {
  background: #3b5598;
}
.feedback-page .content .form-section .form-item .urgency-selector .urgency-item .urgency-dot.orange {
  background: #ff6b35;
}
.feedback-page .content .form-section .form-item .urgency-selector .urgency-item .urgency-dot.red {
  background: #f5222d;
}
.feedback-page .content .form-section .form-item .urgency-selector .urgency-item text {
  font-size: 26rpx;
  color: #666;
}
.feedback-page .content .form-section .form-item .urgency-selector .urgency-item.active {
  border-color: #3b5598;
  background: rgba(59, 85, 152, 0.1);
}
.feedback-page .content .form-section .form-item .urgency-selector .urgency-item.active text {
  color: #3b5598;
  font-weight: 500;
}
.feedback-page .content .history-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}
.feedback-page .content .history-section .section-title {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 20rpx;
}
.feedback-page .content .history-section .section-title .history-count {
  font-size: 22rpx;
  color: #999;
  font-weight: normal;
  margin-left: 8rpx;
}
.feedback-page .content .history-section .history-list .history-item {
  border: 1rpx solid #f0f0f0;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 15rpx;
  transition: background-color 0.2s;
}
.feedback-page .content .history-section .history-list .history-item:last-child {
  margin-bottom: 0;
}
.feedback-page .content .history-section .history-list .history-item:active {
  background-color: #f8f9fa;
}
.feedback-page .content .history-section .history-list .history-item .history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}
.feedback-page .content .history-section .history-list .history-item .history-header .feedback-type {
  display: flex;
  align-items: center;
  padding: 4rpx 10rpx;
  border-radius: 10rpx;
  font-size: 20rpx;
  color: white;
}
.feedback-page .content .history-section .history-list .history-item .history-header .feedback-type text {
  margin-left: 6rpx;
}
.feedback-page .content .history-section .history-list .history-item .history-header .feedback-type.property {
  background: #3b5598;
}
.feedback-page .content .history-section .history-list .history-item .history-header .feedback-type.maintenance {
  background: #ff6b35;
}
.feedback-page .content .history-section .history-list .history-item .history-header .feedback-type.environment {
  background: #07c160;
}
.feedback-page .content .history-section .history-list .history-item .history-header .feedback-type.security {
  background: #9c27b0;
}
.feedback-page .content .history-section .history-list .history-item .history-header .feedback-type.complaint {
  background: #f5222d;
}
.feedback-page .content .history-section .history-list .history-item .history-header .feedback-type.other {
  background: #666;
}
.feedback-page .content .history-section .history-list .history-item .history-header .feedback-status {
  font-size: 20rpx;
  padding: 4rpx 10rpx;
  border-radius: 10rpx;
}
.feedback-page .content .history-section .history-list .history-item .history-header .feedback-status.pending {
  background: #fff7e6;
  color: #fa8c16;
}
.feedback-page .content .history-section .history-list .history-item .history-header .feedback-status.processing {
  background: #e6f7ff;
  color: #1890ff;
}
.feedback-page .content .history-section .history-list .history-item .history-header .feedback-status.resolved {
  background: #f6ffed;
  color: #52c41a;
}
.feedback-page .content .history-section .history-list .history-item .history-header .feedback-status.rejected {
  background: #fff2f0;
  color: #f5222d;
}
.feedback-page .content .history-section .history-list .history-item .feedback-title {
  display: block;
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
  line-height: 1.3;
}
.feedback-page .content .history-section .history-list .history-item .feedback-summary {
  display: block;
  font-size: 22rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 12rpx;
}
.feedback-page .content .history-section .history-list .history-item .history-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.feedback-page .content .history-section .history-list .history-item .history-footer .submit-time {
  font-size: 20rpx;
  color: #999;
}
.feedback-page .content .history-section .history-list .history-item .history-footer .urgency-indicator {
  font-size: 18rpx;
  padding: 2rpx 8rpx;
  border-radius: 8rpx;
}
.feedback-page .content .history-section .history-list .history-item .history-footer .urgency-indicator.normal {
  background: #e6f7ff;
  color: #1890ff;
}
.feedback-page .content .history-section .history-list .history-item .history-footer .urgency-indicator.important {
  background: #fff7e6;
  color: #fa8c16;
}
.feedback-page .content .history-section .history-list .history-item .history-footer .urgency-indicator.urgent {
  background: #fff2f0;
  color: #f5222d;
}
.feedback-page .content .tips-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}
.feedback-page .content .tips-section .tips-title {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 20rpx;
}
.feedback-page .content .tips-section .tips-title text {
  margin-left: 10rpx;
}
.feedback-page .content .tips-section .tips-list .tip-item {
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 10rpx;
}
.feedback-page .content .tips-section .tips-list .tip-item:last-child {
  margin-bottom: 0;
}
.feedback-page .content .submit-btn {
  width: 100%;
  height: 80rpx;
  background: #3b5598;
  color: white;
  border: none;
  border-radius: 8rpx;
  font-size: 30rpx;
  font-weight: 600;
}
.feedback-page .content .submit-btn:disabled {
  background: #ccc;
}
