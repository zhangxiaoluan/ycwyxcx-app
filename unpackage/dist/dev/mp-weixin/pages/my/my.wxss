.user-center {
  background: linear-gradient(to right, #e0ecfa 0%, #f4f6f9 50%, #f6f4fc 100%);
  min-height: 100vh;
  position: relative;
}
.user-center .user-header {
  position: relative;
  z-index: 1;
  padding: 50rpx 35rpx 35rpx;
}
.user-center .user-header .user-info {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-radius: 24rpx 24rpx 16rpx 16rpx;
}
.user-center .user-header .user-info .avatar-wrapper {
  position: relative;
  margin-right: 30rpx;
}
.user-center .user-header .user-info .avatar-wrapper .avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 100%;
  background: #f0f4f8;
}
.user-center .user-header .user-info .user-details {
  flex: 1;
}
.user-center .user-header .user-info .user-details .username {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 8rpx;
}
.user-center .user-header .user-info .user-details .user-id {
  display: block;
  font-size: 24rpx;
  color: #7f8c8d;
}
.user-center .user-header .stats-info {
  display: flex;
  justify-content: space-around;
  padding: 24rpx 0;
  margin-top: 20rpx;
  gap: 30rpx;
}
.user-center .user-header .stats-info .stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  padding: 15rpx 20rpx;
  transition: all 0.3s ease;
  background: linear-gradient(50deg, #e5e0f175 0%, #f5f4fb 50%, #e3ecf8 100%);
  border-radius: 40rpx;
}
.user-center .user-header .stats-info .stat-item:active {
  -webkit-transform: scale(0.95);
          transform: scale(0.95);
}
.user-center .user-header .stats-info .stat-item .stat-icon {
  width: 45rpx;
  height: 45rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 8rpx;
  padding: 10rpx;
}
.user-center .user-header .stats-info .stat-item .stat-icon.points {
  background: rgba(255, 193, 7, 0.1);
}
.user-center .user-header .stats-info .stat-item .stat-icon.wallet {
  background: rgba(236, 106, 93, 0.1);
}
.user-center .user-header .stats-info .stat-item .stat-icon.tasks {
  background: rgba(59, 85, 152, 0.1);
}
.user-center .user-header .stats-info .stat-item .stat-value {
  font-size: 28rpx;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 4rpx;
}
.user-center .user-header .stats-info .stat-item .stat-label {
  font-size: 22rpx;
  color: #7f8c8d;
  font-weight: 500;
}
.user-center .services-section {
  margin: 0 35rpx 35rpx;
  position: relative;
  z-index: 1;
  background: linear-gradient(to right, #f6f4fc 0%, #f4f6f9 50%, #e0ecfa 100%);
  border-radius: 24rpx;
  padding: 20rpx;
}
.user-center .services-section .section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 24rpx;
}
.user-center .services-section .services-grid {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr 1fr;
}
.user-center .services-section .services-grid .service-card {
  transition: all 0.3s ease;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.user-center .services-section .services-grid .service-card:active {
  -webkit-transform: translateY(4rpx);
          transform: translateY(4rpx);
}
.user-center .services-section .services-grid .service-card .service-icon {
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
}
.user-center .services-section .services-grid .service-card .service-icon.personal-info {
  background: rgba(59, 85, 152, 0.1);
}
.user-center .services-section .services-grid .service-card .service-icon.house-binding {
  background: rgba(7, 193, 96, 0.1);
}
.user-center .services-section .services-grid .service-card .service-icon.family {
  background: rgba(59, 85, 152, 0.1);
}
.user-center .services-section .services-grid .service-card .service-icon.verification {
  background: rgba(255, 107, 53, 0.1);
}
.user-center .services-section .services-grid .service-card .service-icon.wallet {
  background: rgba(255, 107, 53, 0.1);
}
.user-center .services-section .services-grid .service-card .service-icon.points {
  background: rgba(255, 193, 7, 0.1);
}
.user-center .services-section .services-grid .service-card .service-title {
  display: block;
  font-size: 25rpx;
  color: #2c3e50;
  line-height: 1.2;
  text-align: center;
  word-wrap: break-word;
  word-break: break-all;
  padding: 20rpx 0;
}
.user-center .services-section .services-grid .service-card .service-status {
  position: absolute;
  top: 6rpx;
  right: 6rpx;
  font-size: 20rpx;
  padding: 2rpx 4rpx;
  border-radius: 6rpx;
  background: rgba(255, 107, 53, 0.1);
  color: #ff6b35;
  font-weight: 500;
}
.user-center .services-section .services-grid .service-card .service-status.verified {
  background: rgba(7, 193, 96, 0.1);
  color: #07c160;
}
.user-center .services-section .services-grid .service-card .wallet-balance {
  font-size: 16rpx;
  color: #07c160;
  font-weight: 600;
  margin-top: 2rpx;
}
.user-center .services-section .services-grid .service-card .points-count {
  font-size: 24rpx;
  color: #ffc107;
  margin-top: 2rpx;
}
.user-center .quick-actions {
  padding: 0 30rpx 40rpx;
  position: relative;
  z-index: 1;
}
.user-center .quick-actions .section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 40rpx;
}
.user-center .quick-actions .action-list {
  background: linear-gradient(to right, #f6f4fc 0%, #f4f6f9 50%, #e0ecfa 100%);
  border-radius: 20rpx;
  overflow: hidden;
  -webkit-backdrop-filter: blur(10rpx);
          backdrop-filter: blur(10rpx);
}
.user-center .quick-actions .action-list .action-item {
  display: flex;
  align-items: center;
  padding: 28rpx 30rpx;
  border-bottom: 1rpx solid rgba(112, 82, 164, 0.05);
  transition: background-color 0.2s;
}
.user-center .quick-actions .action-list .action-item:last-child {
  border-bottom: none;
}
.user-center .quick-actions .action-list .action-item:active {
  background-color: rgba(112, 82, 164, 0.04);
}
.user-center .quick-actions .action-list .action-item .action-icon {
  width: 50rpx;
  height: 50rpx;
  border-radius: 15rpx;
  background: rgba(112, 82, 164, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}
.user-center .quick-actions .action-list .action-item .action-text {
  flex: 1;
  font-size: 28rpx;
  color: #2c3e50;
}
.user-center .quick-actions .action-list .action-item .action-status {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  background: rgba(255, 107, 53, 0.1);
  color: #ff6b35;
  font-weight: 500;
}
.user-center .quick-actions .action-list .action-item .action-status.signed {
  background: rgba(7, 193, 96, 0.1);
  color: #07c160;
}
.user-center .quick-actions .action-list .action-item .action-badge {
  background: #3b5598;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 10rpx;
  border-radius: 12rpx;
  font-weight: 500;
  margin-right: 16rpx;
}
