.login-container .bg-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  overflow: hidden;
}
.login-container .bg-decoration .bg-shape {
  position: absolute;
  background: rgba(255, 255, 255, 0.1);
  -webkit-backdrop-filter: blur(10px);
          backdrop-filter: blur(10px);
  border-radius: 50%;
}
.login-container .bg-decoration .shape-1 {
  width: 300rpx;
  height: 300rpx;
  top: -150rpx;
  right: -150rpx;
  background: radial-gradient(circle, rgba(108, 115, 211, 0.3), rgba(108, 115, 211, 0.1));
  -webkit-animation: float-1 8s ease-in-out infinite;
          animation: float-1 8s ease-in-out infinite;
